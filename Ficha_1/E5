package exercicios;

public class E5 {
	/*Escreva um método que devolva o número de dias de um ano. Utilize o método do 
	  problema anterior. */
	
	static int diasAno(int ano) {
		return ano % 4 == 0 && !(ano % 100 == 0) || ano % 400 == 0 ? 366 : 365 ;
		
	}
	
	public static void main(String[] args) {
		System.out.println(diasAno(2023));

	}

}
